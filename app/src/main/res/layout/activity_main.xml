<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trackInformation">

    <ImageView
        android:id="@+id/albumImage"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_margin="16dp"
        android:src="@drawable/nautilus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/play"
        android:background="@color/white"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/albumImage"
        app:layout_constraintEnd_toEndOf="@id/albumImage"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/next"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/playButton"
        app:layout_constraintStart_toEndOf="@id/playButton"
        app:layout_constraintBottom_toBottomOf="@id/playButton"
        />
    <ImageButton
        android:id="@+id/previosButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/previous"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/playButton"
        app:layout_constraintEnd_toStartOf="@id/playButton"
        app:layout_constraintBottom_toBottomOf="@id/playButton"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/singer"
        android:text="Наутилус Помпилиус"
        android:layout_margin="16dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/playButton"
        app:layout_constraintStart_toStartOf="@id/playButton"
        app:layout_constraintEnd_toEndOf="@id/playButton"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTrack"
        android:text="Скованные"
        android:layout_margin="16dp"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/singer"
        app:layout_constraintStart_toStartOf="@id/playButton"
        app:layout_constraintEnd_toEndOf="@id/playButton"
        />
</androidx.constraintlayout.widget.ConstraintLayout>